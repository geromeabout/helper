<Page x:Class="helper.StartPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:helper"
      Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
  <ScrollViewer>
    <Grid>
      <StackPanel
        HorizontalAlignment="Center"
        VerticalAlignment="Center">
        <TextBlock AutomationProperties.AutomationId="HelloTextBlock"
          Text="Start Page!"
          HorizontalAlignment="Center" />
        <TextBlock Name="ResultTextBlock"
          Text="Result"
          HorizontalAlignment="Center" />
        <Button Content="Check" Click="Check_Click" />
        <Button Content="Install" Click="Install_Click" />
        <Button Content="Check LTSP" Click="CheckLTSP_Click" />
        <Button Content="Check libreoffice" Click="CheckLibreOffice_Click" />
      </StackPanel>
    </Grid>
  </ScrollViewer>
</Page>
